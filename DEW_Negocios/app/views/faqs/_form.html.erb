<%= form_for(@faq) do |f| %>
  <% if @faq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@faq.errors.count, "error") %></h2>

      <ul>
      <% @faq.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">    
	<%= f.label :Plan_Negocio%><br />
    <%= f.collection_select :plannegocio_id, Plannegocio.all, :id, :tituloplan, :prompt => true %>
  </div>
 
  <div class="field">
    <%= f.label :pregunta %><br />
    <%= f.text_area :pregunta %>
  </div>
  <div class="field">
    <%= f.label :respuesta %><br />
    <%= f.text_area :respuesta %>
  </div>  
      
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
